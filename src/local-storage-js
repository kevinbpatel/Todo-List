export const checkStorageEmpty = () => { 
 // if 

}


export const storeTodoLocal = (projectName, todoItem) => { 
  localStorage.setItem(projectName, JSON.stringify(todoItem));
}

export const deleteTodoLocal = (projectName, todoItem) => { 
  localStorage.removeItem(projectName, JSON.stringify(todoItem));
}



export function storageAvailable(type) {
  let storage;
  try {
    storage = window[type];
    const x = "__storage_test__";
    storage.setItem(x, x);
    storage.removeItem(x);
    return true;
  } catch (e) {
    return (
      e instanceof DOMException &&
      e.name === "QuotaExceededError" &&
      // acknowledge QuotaExceededError only if there's something already stored
      storage &&
      storage.length !== 0
    );
  }
}